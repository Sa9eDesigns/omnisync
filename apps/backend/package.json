{
  "name": "@boilerplate/backend",
  "version": "1.0.0",
  "description": "Cross-platform Backend API - Node.js/Express template",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@boilerplate/shared": "workspace:*",
    "@boilerplate/config": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@boilerplate/eslint-config": "workspace:*",
    "@boilerplate/tsconfig": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "catalog:",
    "tsx": "^4.7.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
