{
  "name": "@boilerplate/mobile",
  "version": "1.0.0",
  "description": "Cross-platform Mobile Application - React Native/Expo template",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "tsc --noEmit",
    "build:web": "expo export --platform web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf .expo dist build"
  },
  "dependencies": {
    "@boilerplate/shared": "workspace:*",
    "@boilerplate/config": "workspace:*",
    "@boilerplate/ui": "workspace:*",
    "@boilerplate/store": "workspace:*",
    "expo": "catalog:",
    "expo-router": "~3.4.7",
    "expo-status-bar": "~1.11.1",
    "expo-linking": "~6.2.2",
    "expo-constants": "~15.4.2",
    "expo-splash-screen": "~0.26.4",
    "react": "catalog:",
    "react-native": "catalog:",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@boilerplate/eslint-config": "workspace:*",
    "@boilerplate/tsconfig": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-native": "^0.72.8",
    "jest": "^29.7.0",
    "jest-expo": "~50.0.1",
    "typescript": "catalog:"
  },
  "jest": {
    "preset": "jest-expo"
  }
}
