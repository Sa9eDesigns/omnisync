{
  "name": "@boilerplate/database",
  "version": "1.0.0",
  "description": "Database layer with Prisma ORM for cross-platform applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@boilerplate/shared": "workspace:*",
    "@prisma/client": "catalog:",
    "prisma": "catalog:"
  },
  "devDependencies": {
    "@boilerplate/eslint-config": "workspace:*",
    "@boilerplate/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "tsx": "^4.7.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "prisma"
  ]
}
