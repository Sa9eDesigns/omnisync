{
  "name": "@boilerplate/ui",
  "version": "1.0.0",
  "description": "Shared UI components for cross-platform applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "generate": "node scripts/generate-component.js",
    "generate:component": "node scripts/generate-component.js"
  },
  "dependencies": {
    "@boilerplate/shared": "workspace:*",
    "@base-ui-components/react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "clsx": "catalog:",
    "lucide-react": "catalog:"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-native": ">=0.70.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-safe-area-context": ">=4.0.0",
    "expo": ">=49.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-gesture-handler": {
      "optional": true
    },
    "react-native-safe-area-context": {
      "optional": true
    },
    "expo": {
      "optional": true
    }
  },
  "devDependencies": {
    "@boilerplate/eslint-config": "workspace:*",
    "@boilerplate/tsconfig": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./universal": {
      "types": "./dist/universal/index.d.ts",
      "import": "./dist/universal/index.js",
      "require": "./dist/universal/index.js"
    },
    "./native": {
      "types": "./dist/native/index.d.ts",
      "import": "./dist/native/index.js",
      "require": "./dist/native/index.js"
    }
  },
  "files": [
    "dist"
  ]
}
